<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.recyclerviews.kotlin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".textlists.TestListActivity" />
        <activity android:name=".bitmapLists.BitmapListsActivity" />
        <activity android:name=".textAndBitmapList.TextAndBitmapActivity" />
        <activity android:name=".waterfallLists.WaterfallActivity" />
        <activity android:name=".systempullrefresh.SystemPullRefreshActivity" />
        <activity android:name=".custompullrefresh.CustomPullRefeshActivity"></activity>
    </application>

</manifest>