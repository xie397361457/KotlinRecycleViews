<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:PullableLayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.recyclerviews.kotlin.custompullrefresh.Main.PullableLayout
        android:id="@+id/customPullableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        PullableLayout:pullablelayout_side="TOPANDBOTTOM"
        >

        <com.recyclerviews.kotlin.custompullrefresh.View.PullableRecyclerView
            android:id="@+id/customPullRefreshRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </com.recyclerviews.kotlin.custompullrefresh.Main.PullableLayout>

</android.support.constraint.ConstraintLayout>
